<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Percentage Calculator</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f4f4f9;
        }
        .container {
            text-align: center;
            padding: 20px;
            border-radius: 8px;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }
        input[type="number"] {
            padding: 10px;
            margin: 10px 0;
            width: 100%;
            font-size: 16px;
        }
        button {
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 4px;
        }
        .result {
            margin-top: 15px;
            font-size: 18px;
        }
    </style>
</head>
<body>

<div class="container">
    <h2>Percentage Calculator</h2>
    <label for="numberInput">Enter a Number:</label>
    <input type="number" id="numberInput" placeholder="Enter number">
    <button onclick="calculate()">Calculate</button>

    <div class="result" id="result"></div>
</div>

<script>
    function calculate() {
        const number = parseFloat(document.getElementById('numberInput').value);
        if (!isNaN(number)) {
            const critical = number * 0.15;
            const min = number * 0.35;
            const max = number * 1.35;

            document.getElementById('result').innerHTML = `
                <p>Critical (15%): ${critical.toFixed(2)}</p>
                <p>Min (35%): ${min.toFixed(2)}</p>
                <p>Max (135%): ${max.toFixed(2)}</p>
            `;
        } else {
            document.getElementById('result').innerHTML = `<p>Please enter a valid number.</p>`;
        }
    }
</script>

</body>
</html>
